//2. Faça um algoritmo que solicite ao usuário um valor e exiba o dobro do valor.

#include <stdio.h>
#include <locale.h>

int main() {
    setlocale(LC_ALL, "Portuguese");
    
    float num, metade;
    
    printf("Escreva um numero real: ");
    scanf("%f", &num);
    
    metade = num * 2;
    
    printf("\nO dobro do seu número é %.2f", metade);
    
    return 0;
}
